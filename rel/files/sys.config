[
 {linc,
  [
   %% Following setting enables or disables OF-Config subsystem which consists
   %% of three applications: ssh, enetconf and of_config.
   %% Allowed values: 'enabled' | 'disabled'
   {of_config, disabled},

   %% Configuration of switch backend implementation used by ofs_logic process.
   %% By default an Erlang userspace 1.2 implementation is selected.
   %% Allowed values: {BackendMod :: atom(), BackendOpts :: list(term())}
   {backend, {linc_us3, []}},

   %% Configuration of the controllers switch will connect to. Ideally this
   %% list should be empty and assignement should be handled by an OF-Config
   %% client.
   {controllers,
    [
     %% If you want to connect to the controller,
     %% specify its hostname and port as in the following example:
     %% {"localhost", 6633}
    ]},

   {backends,
    [
     {userspace,
      [
       %% Configure ports available to the switch when using the
       %% userspace backend (us3) according to your system setup.
       %% * Under Linux all TAP interfaces must be set up beforehand
       %%   as persistent.
       %% * Under MacOSX TAP interfaces are created during node
       %%   startup.
       {ports,
        [
         %% {1, [{interface, "eth0"}]},
         %% {2, [{interface, "tap0"}]},
         %% {3, [{interface, "tap1"},
         %%      {ip, "10.0.0.1"}]}
        ]}
      ]}
    ]},

   %% This setting enables or disables EXPERIMENTAL support for queues. If it's
   %% disabled (which is the default and recommended configuration) the
   %% {queues, ...} parameter for port won't have any effect on the behaviour of
   %% that port.
   %% Allowed values: 'enabled' | 'disabled'
   {queues, disabled},

   %% Port configuration when queues are enabled.
   %% Spec for port entry:
   %%     [{integer(),
   %%       [{rate, {integer(), bps|kbps|kibps|mbps|mibps|gbps|gibps}} |
   %%        {queues, [{integer(), [{min_rate, integer()} |
   %%                               {max_rate, integer()}]}]}]}]
   {ports,
    [
     %% * Sample port entries:
     %% {1, [
     %%      {rate, {100, mbps}},
     %%      {queues, []}
     %%     ]},
     %% {2, [
     %%      {rate, {1, gbps}},
     %%      {queues, [{1, [{min_rate, 250},
     %%                     {max_rate, 500}]}]}
     %%     ]}
    ]}
  ]},

 {enetconf,
  [
   {capabilities, [{base, {1, 1}}]},
   {callback_module, linc_ofconfig},
   {sshd_ip, any},
   {sshd_port, 830},
   {sshd_user_passwords,
    [
     {"linc", "linc"}
    ]}
  ]},

 {lager,
  [
   {handlers,
    [
     {lager_console_backend, info},
     {lager_file_backend,
      [
       {"log/error.log", error, 10485760, "$D0", 5},
       {"log/console.log", info, 10485760, "$D0", 5}
      ]}
    ]}
  ]},

 {sasl,
  [
   {sasl_error_logger, {file, "log/sasl-error.log"}},
   {errlog_type, error},
   {error_logger_mf_dir, "log/sasl"},      % Log directory
   {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
   {error_logger_mf_maxfiles, 5}           % 5 files max
  ]}
].
